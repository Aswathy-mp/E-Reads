        <div class="card" style="width: 45%; margin-left:25% ; margin-top: 5%;">
                <img class="card-img-top" style="height: 500px;" src="/images/<%=book.image%>" alt="Card image cap">
                <div class="card-body">
                  <h4 class="card-title"><%=book.title%></h4>
                  <h6 class="card-title"><%=book.author%></h6>
                  <p><%=book.genre%></p>
                  <p class="card-text"><%=book.about%></p>
                </div>
                <div class="card-body">
                  <a href="/books" class="card-link">Go Back</a> 
                </div>
        </div>
